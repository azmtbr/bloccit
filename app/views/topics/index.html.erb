<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= render @topic.topics %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <% if user_can_create_topics? %>
  <div class="col=md-4">
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
