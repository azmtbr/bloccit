<h1>Sign Up Confirmation</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @user do |f| %>
      <h3>Are you sure these values are correct?</h3>
      <p>Name: <%= @user.name %></p>
      <p>Email: <%= @user.email %></p>

      <div class="form-group">
        <%= f.submit "Yes", class: 'btn btn-success' %>
        <%= link_to "No", new_user_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
